---
import { Card } from "@eliancodes/brutal-ui";
import { Image } from "astro:assets";

interface Props {
  title: string;
  imgSrc?: ImageMetadata;
  imgAlt: string;
  description: string;
  slug: string;
}

const { title, imgAlt, description, slug } = Astro.props;
const imgSrc = Astro.props.imgSrc
  ? Astro.props.imgSrc
  : (`v1/generate/og/${slug}.png` as unknown as ImageMetadata);
---

<Card color="white">
  <h3 class="poppins text-lg md:text-xl">{title}</h3>
  <div class="rounded-lg border-[3px] border-black my-4 h-56">
    <Image
      src={imgSrc}
      alt={imgAlt}
      width={800}
      height={400}
      class="rounded h-full w-full object-contain"
    />
  </div>
  <p class="poppins">{description}</p>
  <slot />
</Card>
