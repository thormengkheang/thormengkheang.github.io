---import Utterances from './Utterances.astro';

interface Props {
  content: any;
  comment: boolean;
}

const { content, comment } = Astro.props;
const dateOptions: object = {
  year: "numeric",
  month: "long",
  day: "numeric",
};

const formattedPublishDate = new Date(content.pubDate).toLocaleDateString(
  "en-US",
  dateOptions
);
---

<article class="lg:col-span-2 prose-slate w-sm md:w-prose md:prose poppins">
  <a href="/blog/" title="Back to blog">&larr; Back to blog</a>
  <p class="text-slate-400 text-sm md:text-base">
    Published on {formattedPublishDate} by {content.author}
  </p>
  <slot />
  <p class="text-slate-400">Written by {content.author}</p>
  <a href="/blog/" title="Back to blog">&larr; Back to blog</a>
  {comment && <Utterances />}
</article>
