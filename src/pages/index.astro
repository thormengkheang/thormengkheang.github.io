---
import Layout from "@layouts/Default.astro";
import RecentBlogPosts from "@components/generic/RecentBlogPosts.astro";
import MobileSocials from "@components/home/MobileSocials.astro";
import { Button, Pill } from "@eliancodes/brutal-ui";
import { Card } from "@eliancodes/brutal-ui";
import profileImg from "../assets/profile-image.jpg";
import { Image } from "astro:assets";

const skills = [
  "JavaScript",
  "TypeScript",
  "Expo",
  "Next.js",
  "Node.js",
  "React",
  "React Native",
  "Astro",
  "TailwindCSS",
  "shadcn/ui",
  "Vitest",
];
---

<Layout
  title="Home"
  pageTitle="Home"
  description="Home page for KheangCodes personal website."
>
  <main class="bg-pink-500 p-6">
    <MobileSocials />
    <section id="about" class="grid md:grid-cols-8 gap-8 mt-4">
      <h2 class="hidden">About KheangCodes</h2>
      <div class="col-span-6">
        <Card>
          <div class="flex flex-col justify-between items-start gap-4">
            <p class="mt-4 outfit text-xl md:text-3xl lg:text-5xl">
              Senior Frontend Developer @<a
                class="underline decoration-blue-500"
                target="_blank"
                href="https://www.wingbank.com.kh/en/">Wing</a
              >
            </p>
            <p class="mt-2 outfit text-small md:text-base lg:text-xl">
              Make magic by ðŸ’».
            </p>
            <p class="mt-2 outfit text-base md:text-xl lg:text-2xl">
              previously: @<a
                class="underline decoration-blue-500"
                target="_blank"
                href="https://nham24.com/">Nham24</a
              >
            </p>
            <p class="mt-2 outfit text-xl md:text-2xl lg:text-4xl">
              Located in Phnom Penh, ðŸ‡°ðŸ‡­
            </p>
          </div>
          <div class="flex justify-end">
            <Button target={"_self"} href="/blog">See what I do &rarr;</Button>
          </div>
        </Card>
      </div>
      <div class="col-span-2">
        <Image
          src={profileImg}
          alt="profile image of Kheang"
          class="object-cover h-[400px] w-full rounded-lg md:col-span-2 border-[3px] border-black card-shadow"
        />
      </div>
    </section>
    <section id="about" class="grid md:grid-cols-8 gap-8 mt-4">
      <h2 class="hidden">About KheangCodes</h2>
      <div class="flex col-span-4">
        <Card>
          <div class="flex flex-col justify-between items-start gap-4">
            <h2 class="text-2xl md:text-4xl lg:text-6xl mb-2 dm-serif">
              What's keeping me busy?
            </h2>
            <div class="flex justify-between items-center">
              <ul class="flex flex-wrap gap-4 mt-2">
                {
                  skills.map((tag) => {
                    return (
                      <li>
                        <a
                          class="sanchez"
                          href={`/blog/tags/${tag.toLowerCase()}/`}
                        >
                          <Pill>{tag}</Pill>
                        </a>
                      </li>
                    );
                  })
                }
              </ul>
            </div>
          </div>
        </Card>
      </div>
      <div class="col-span-4">
        <Card>
          <div class="flex flex-col justify-between items-start gap-4">
            <h2 class="text-2xl md:text-4xl lg:text-6xl mb-4 dm-serif">
              Who am I?
            </h2>
            <p class="poppins">
              I'm a software engineer based in Cambodia with expertise in web
              and mobile development. I began my career in 2016 at <a
                class="underline decoration-yellow-500"
                target="_blank"
                href="https://www.morakot.it/">Morakot Technology</a
              >, building core banking systems with Python and Flask.
            </p>
            <p class="poppins mt-2">
              In 2018, I led mobile development at <a
                class="underline decoration-yellow-500"
                target="_blank"
                href="https://groupincorp.com/">GroupIn</a
              > using React Native, delivering cross-platform apps for iOS and
              Android.
            </p>
            <p class="poppins mt-2">
              From 2023 to early 2025, I was a Senior Software Engineer at <a
                class="underline decoration-yellow-500"
                target="_blank"
                href="https://nham24.com/">Nham24</a
              >, where I built scalable mobile apps to support a growing user
              base.
            </p>
            <p class="poppins mt-2">
              Currently, I'm a Senior Frontend Developer at <a
                class="underline decoration-yellow-500"
                target="_blank"
                href="https://www.wingbank.com.kh/">Wing</a
              >, serving over 2 million users. I build secure, high-performance
              web apps with React.js, TypeScript, and Tailwind CSS, including
              real-time dashboards and a Loan Origination System optimized for
              speed, accessibility, and usability.
            </p>
          </div>
        </Card>
      </div>
    </section>
    <RecentBlogPosts />
  </main>
</Layout>
